{
	"compilerOptions": {
		"outFile": "+build/scrollapp.js",
		"composite": true,
		"module": "system",
		"moduleResolution": "node",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"preserveConstEnums": true,
		"jsx": "react",
		"jsxFactory": "raw.jsx",
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"include": [
		"core/**/!.ts",
		"node_modules/@scrollapp/rawjs/*.ts",
		"node_modules/strawjs/*.ts",
		"core/**/*.ts",
		"core/**/*.tsx"
	]
}
